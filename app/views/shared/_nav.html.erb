<div class="navbar-pet">

  <%= link_to root_path, class: "navbar-pet-brand" do %>
    <div class="logo-circle">
      <i class="fa fa-paw" aria-hidden="true"></i>
    </div>
    <div class="logo-text">Pet Boom!</div>
  <% end %>

<div class="navbar-pet-middle">
  <a href="" class="nav-category-pet navbar-pet-link">
    <%= image_tag("walk.png") %>
  </a>
  <a href="" class="nav-category-pet navbar-pet-link">
    <%= image_tag("sitting.png") %>
  </a>
  <a href="" class="nav-category-pet navbar-pet-link">
    <%= image_tag("grooming.png") %>
  </a>
</div>
  <!-- Right Navigation -->
  <div class="navbar-pet-right">

    <% if user_signed_in? %>
      <%= link_to('Create', new_service_path, class: "btn btn-default") %>
      <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "navbar-pet-item navbar-pet-link") %>
    <% else %>
      <%= link_to('Sign up', new_user_registration_path, class: "btn btn-default") %>
      <%= link_to('Login', new_user_session_path, class: "navbar-pet-item navbar-pet-link") %>
    <% end %>

  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-pet-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-pet-dropdown-menu">
        <li><a href="#">Messages</a></li>
      </ul>
    </div>
  </div>
</div>
